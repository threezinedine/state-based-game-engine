	"version": "0.2.0",
	"configurations": [
		{
			"name": "Hero",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/examples/Hero/Hero.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/examples/Hero",
			"environment": [],
			"externalConsole": false,
			// "pipeTransport": {
			//     "debuggerPath": "/usr/bin/gdb",
			//     "pipeProgram": "<full path to pipe program such as plink.exe>",
			//     "pipeArgs": [],
			//     "pipeCwd": ""
			// },
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Testing",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/NTTEngine_Test.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}
